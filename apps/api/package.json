{
	"name": "@playbacc/api",
	"scripts": {
		"dev": "bun run --hot src/index.ts",
		"worker:scrobble": "bun run src/worker/scrobble-worker.ts",
		"db:generate": "drizzle-kit generate",
		"db:ensure": "bun run scripts/ensure-db.ts",
		"db:migrate": "bun run db:ensure && drizzle-kit migrate",
		"db:push": "bun run db:ensure && drizzle-kit push",
		"db:studio": "bun run db:ensure && drizzle-kit studio",
		"dev:all": "concurrently \"bun run dev\" \"bun run worker:scrobble\" \"bun run db:studio\" --names \"API,WORKER,STUDIO\" --prefix-colors \"blue,green,yellow\"",
		"format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
		"format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json}\""
	},
	"dependencies": {
		"@playbacc/types": "workspace:*",
		"drizzle-orm": "^0.45.0",
		"hono": "^4.10.7",
		"jose": "^6.1.3",
		"postgres": "^3.4.7",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@types/bun": "latest",
		"@types/node": "^20.0.0",
		"concurrently": "^9.2.1",
		"drizzle-kit": "^0.31.8"
	}
}
